<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane
        maxHeight="-Infinity"
        maxWidth="-Infinity"
        minHeight="-Infinity"
        minWidth="-Infinity"
        prefHeight="720.0"
        prefWidth="1200.0"
        style="-fx-background-image: url('/images/login_screen.jpg');"
        xmlns="http://javafx.com/javafx/10.0.2-internal"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.game8.client.controller.LoginRegisterController">
   <ImageView fitHeight="150.0" fitWidth="848.0" layoutX="269.0" layoutY="66.0" pickOnBounds="true" preserveRatio="true">
   <Image url="@/images/star_wars1.png" />
   </ImageView>
    <AnchorPane layoutX="450.0" layoutY="371.0" prefHeight="203.0" prefWidth="200.0 ">
        <Label alignment="CENTER" layoutX="105.0" layoutY="14.0" prefHeight="23.0" prefWidth="91.0" text="Login" textFill="WHITE" />
        <Label layoutX="67.0" layoutY="44.0" text="Username" textFill="WHITE" />
        <TextField fx:id="usernameBox" layoutX="65.0" layoutY="60.0" />
        <Label layoutX="69.0" layoutY="94.0" text="Password" textFill="WHITE" />
        <PasswordField fx:id="passwordBox" layoutX="69.0" layoutY="110.0" />
        <Button fx:id="loginButton" layoutX="123.0" layoutY="145.0" mnemonicParsing="false" onAction="#handleLoginEnter" text="Login" />
      <Hyperlink fx:id="signInLink" layoutX="8.0" layoutY="171.0" text="Doesn't have an account yet? Sign in here!" onAction="#handleSignInPressed" textFill="WHITE" />
    </AnchorPane>
</AnchorPane>
